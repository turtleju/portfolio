<div class="contact-form">
  <section id="contact-form">
    <div class="active" id="wrap-action">
      <button id="action" class="button-shadow button-shadow-dark-blue">Say hi ! <span class="wave">ğŸ‘‹ğŸ»</span></button>
    </div>
    <svg viewBox="0 0 215 110" preserveAspectRatio="none">
      <polygon class="polymorph" points="215,110 0,110 0,0 215,0"></polygon>
    </svg>
    <div class="container">
      <div id="content">
        <%= form_for contacts_path do |f| %>
          <div>
            <%= f.label :name %>
            <%= f.text_field  :name, required: true, class: "contacts-form-text-area" %><br>
            <%= f.label :email %>
            <%= f.text_field :email, required: true, class: "contacts-form-text-area" %><br>
            <%= f.text_area :message,
                            rows: 8,
                            cols: 40,
                            required: true,
                            class: "contacts-form-text-area",
                            placeholder: "Your Message"%><br>

            <div class= "hidden d-none">
              <%= f.text_field :nickname %>
            </div>

            <%= f.submit 'Envoyer', class: 'button-shadow button-shadow-white' %>
          </div>
        <% end %>
        <%= image_tag 'close.svg', id: 'close' %>
        <div class="col-md-6" id="flash-message">
          <%= render 'flash' %>
        </div>
      </div>
    </div>
  </section>
</div>
